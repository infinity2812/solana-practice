{
  "name": "arcium-private-credit",
  "version": "1.0.0",
  "description": "Private Credit on-chain, privately",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "test": "node test-functionality.js",
    "build": "npm run build:sdk && npm run build:orchestrator && npm run build:client",
    "build:sdk": "cd sdk && npm run build",
    "build:orchestrator": "cd orchestrator && npm run build",
    "build:client": "cd client && npm run build",
    "dev": "concurrently \"npm run dev:orchestrator\" \"npm run dev:client\"",
    "dev:orchestrator": "cd orchestrator && npm run dev",
    "dev:client": "cd client && npm run dev",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist build node_modules/.cache",
    "install:all": "npm install && cd sdk && npm install && cd ../client && npm install && cd ../orchestrator && npm install"
  },
  "keywords": ["arcium", "private-credit", "solana", "multisig"],
  "author": "Arcium Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "workspaces": [
    "sdk",
    "client", 
    "orchestrator"
  ]
}
